		add(v);
		add(w);
		add(x);
		add(y);
		add(z);
		add(cancel);
	}
	
	public static void confirm(){
		
	}
	
	public void actionPerformed(ActionEvent e) {
		if(e.getSource().equals(cancel)){

		}
		if(e.getSource().equals(b)){
			b.setEnabled(false);
		}
		
		if(e.getSource().equals(c)){
			c.setEnabled(false);
		}
		
		if(e.getSource().equals(d)){
			d.setEnabled(false);
		}
		
		if(e.getSource().equals(f)){
			f.setEnabled(false);
		}
		
		if(e.getSource().equals(g)){
			g.setEnabled(false);
		}
		
		if(e.getSource().equals(h)){
			h.setEnabled(false);
		}
		
		if(e.getSource().equals(j)){
			j.setEnabled(false);
		}
		
		if(e.getSource().equals(k)){
			k.setEnabled(false);
		}
		
		if(e.getSource().equals(l)){
			l.setEnabled(false);
		}
		
		if(e.getSource().equals(m)){
			m.setEnabled(false);
		}
		
		if(e.getSource().equals(n)){
			n.setEnabled(false);
		}
		
		if(e.getSource().equals(p)){
			p.setEnabled(false);
		}
		
		if(e.getSource().equals(q)){
			q.setEnabled(false);
		}
		
		if(e.getSource().equals(r)){
			r.setEnabled(false);
		}
		
		if(e.getSource().equals(s)){
			s.setEnabled(false);
		}
		
		if(e.getSource().equals(t)){
